<view class="page">
  <!-- 用户信息部分 -->
  <view class="user-info">
    <view class="avatar">
      <image class="avatar-image" src="/images/call.jpg"></image>
    </view>
    <view class="info">
      <view class="user-details">
        <text class="user-name">徐海福</text>
        <text class="user-info-text">男 56岁</text>
      </view>
      <view class="user-actions">
        <button class="action-button">健康档案</button>
        <button class="action-button">用药提醒</button>
      </view>
    </view>
  </view>
  <!-- 我的订单 -->
  <view class="section">
    <text class="section-title">我的订单</text>
    <view class="order-options">
      <view class="order-item" bindtap="navigateToOrder">
        <image src="/images/heart.jpg" class="order-icon"></image>
        <text class="order-text">一点孝心</text>
      </view>
      <view class="order-item">
        <image src="/images/help.jpg" class="order-icon"></image>
        <text class="order-text">三助服务</text>
      </view>
    </view>
  </view>
  <!-- 服务设置 -->
  <view class="section">
    <text class="section-title">服务设置</text>
    <view class="settings-options">
      <view class="settings-item">
        <image src="/images/call.jpg" class="settings-icon"></image>
        <text class="settings-text">个人资料</text>
        <image src="/images/right.jpg" class="settings-arrow"></image>
      </view>
      <view class="settings-item">
        <image src="/images/call.jpg" class="settings-icon"></image>
        <text class="settings-text">关注公众号</text>
        <image src="/images/right.jpg" class="settings-arrow"></image>
      </view>
      <view class="settings-item">
        <image src="/images/call.jpg" class="settings-icon"></image>
        <text class="settings-text">关于我们</text>
        <image src="/images/right.jpg" class="settings-arrow"></image>
      </view>
    </view>
  </view>
</view>