<view class="page">
  <!-- 用户信息部分 -->
  <view class="user-info">
    <view class="avatar">
      <image class="avatar-image" src="/images/head.png"></image>
    </view>
    <view class="info">
      <view class="user-details">
        <text class="user-name">徐海福</text>
        <text class="user-info-text">男 56岁</text>
      </view>
  
    </view>
  </view>
  <!-- 我的订单 -->
  <view class="section">
    <text class="section-title">我的订单</text>
    <view class="order-options">
      <view class="order-item" bindtap="navigateToOrder">
        <image src="/images/all.png" class="order-icon"></image>
        <text class="order-text">全部</text>
      </view>
      <view class="order-item">
        <image src="/images/no-orders.png" class="order-icon"></image>
        <text class="order-text">待接单</text>
      </view>
      <view class="order-item">
        <image src="/images/no-service.png" class="order-icon"></image>
        <text class="order-text">待服务</text>
      </view>
      <view class="order-item">
        <image src="/images/done.png" class="order-icon"></image>
        <text class="order-text">已完成</text>
      </view>
    </view>
  </view>
  <!-- 服务设置 -->
  <view class="section">
    <text class="section-title">服务设置</text>
    <view class="settings-options">
      <view class="settings-item" bindtap="navigateToPerson">
        <image src="/images/person.png" class="settings-icon"></image>
        <text class="settings-text">个人资料</text>
        <image src="/images/right.jpg" class="settings-arrow"></image>
      </view>
      <view class="settings-item" bindtap="navigateToPublic">
        <image src="/images/wechat.png" class="settings-icon"></image>
        <text class="settings-text">关注公众号</text>
        <image src="/images/right.jpg" class="settings-arrow"></image>
      </view>
      <view class="settings-item" bindtap="navigateToAbout">
        <image src="/images/we.png" class="settings-icon"></image>
        <text class="settings-text">关于我们</text>
        <image src="/images/right.jpg" class="settings-arrow"></image>
      </view>
      <view class="settings-item">
        <image src="/images/we.png" class="settings-icon"></image>
        <text class="settings-text">退出登录</text>
      </view>
    </view>
  </view>
</view>