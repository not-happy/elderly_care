<view class="container">
    <!-- 轮播图 -->
    <swiper class="swiper" indicator-dots autoplay interval="3000" circular>
        <swiper-item>
            <image src="/images/image1.jpeg" class="swiper-image"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/image2.jpeg" class="swiper-image"></image>
        </swiper-item>
    </swiper>
    <!-- 快捷功能按钮 -->
    <view class="quick-buttons">
        <view class="button-item" bindtap="navigateToCall">
            <image src="/images/call.jpg" class="button-icon"></image>
            <text class="button-text">一键呼叫</text>
        </view>
        <view class="button-item">
            <image src="/images/heart.jpg" class="button-icon"></image>
            <text class="button-text">一点孝心</text>
        </view>
        <view class="button-item" bindtap="navigateToHelp">
            <image src="/images/help.jpg" class="button-icon"></image>
            <text class="button-text">三助服务</text>
        </view>
        <view class="button-item" bindtap="navigateToDevice">
            <image src="/images/device.jpg" class="button-icon"></image>
            <text class="button-text">设备中心</text>
        </view>
    </view>
    <!-- 用药提醒 -->
    <view class="reminder">
        <view class="reminder-header">
            <!-- <text class="reminder-title">用药提醒</text> -->
            <text class="reminder-text-top">用药</text>
            <text class="reminder-text-bottom">提醒</text>
        </view>
        <view class="reminder-content">
            <text class="reminder-time">服务时间：06:30</text>
            <text class="reminder-pill">卡托普利 2片</text>
        </view>
    </view>
    <!-- 疾病宝典 -->
    <view class="health-tips">
        <view class="tips-header">
            <text class="tips-title">疾病宝典</text>
            <text class="more">更多 ></text>
        </view>
        <view class="tips-content">
            <view class="tip-item" bindtap="navigateToDiabetes">
                <image src="/images/image1.jpeg" class="tip-image"></image>
                <text class="tip-text">控制血糖</text>
            </view>
            <view class="tip-item">
                <image src="/images/image2.jpeg" class="tip-image"></image>
                <text class="tip-text">注射胰岛素</text>
            </view>
            <view class="tip-item">
                <image src="/images/image1.jpeg" class="tip-image"></image>
                <text class="tip-text">健康饮食</text>
            </view>
        </view>
    </view>
</view>